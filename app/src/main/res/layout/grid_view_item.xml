<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!-- We are binding this layout to the OverviewViewModel.kt file -->
        <variable
            name="property"
            type="com.example.android.marsrealestate.network.MarsProperty" />

        <!--
            <variable
            name="viewModel"
            type="com.example.android.marsrealestate.overview.OverviewViewModel" />
        -->

    </data>

    <!--
        We are using app:imageUrl=@{} for binding adapter:

        Remember that in BindingAdapters.kt file, we used @BindingAdapter("imageUrl") for bindImage()
        method? So, whatever variable we will assign inside the @BindingAdapter("***") will be auto
        displayed as soon as we will type app:*** for binding attribute in the <ImageView>

        It means, that there is a binding connection between this <ImageView> and our bindImage()
        method using the "imageUrl" reference.
    -->
    <!--
        app:imageUrl="@{viewModel.property.imgSrcUrl}"

        @{property.imgSrcUrl}
     -->
    <ImageView
        android:id="@+id/mars_image"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:scaleType="centerCrop"
        app:imageUrl="@{property.imgSrcUrl}"
        tools:src="@tools:sample/backgrounds/scenic" />

</layout>
